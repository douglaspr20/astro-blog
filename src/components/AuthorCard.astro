---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'author'>;

const {
  data: { avatar, name, subtitle, twitter, linkedIn, github, bio },
  id,
} = Astro.props;
---

<div class='max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5'>
  <Image
    src={avatar}
    alt={name}
    width={200}
    height={200}
    class='w-32 h-32 rounded-full mx-auto'
  />
  <h2 class='text-center text-2xl font-semibold mt-3'>{name}</h2>
  <p class='text-center text-gray-600 mt-1'>{subtitle}</p>
  <div class='flex justify-center mt-5'>
    <a
      href={`https://x.com/${twitter}`}
      target='_blank'
      class='text-blue-500 hover:text-blue-700 mx-3'
      >Twitter</a
    >
    <a
      href={linkedIn}
      target='_blank'
      class='text-blue-500 hover:text-blue-700 mx-3'
      >LinkedIn</a
    >
    <a
      href={github}
      target='_blank'
      class='text-blue-500 hover:text-blue-700 mx-3'
      >GitHub</a
    >
  </div>
  <div class='mt-5'>
    <h3 class='text-xl font-semibold'>Bio</h3>
    <p class='text-gray-600 mt-2'>
      {bio}
    </p>

    <div class='flex justify-end'>
      <a
        class='hover:text-blue-500 hover:underline'
        href={`/blog/author/${id}`}
        >Read More</a
      >
    </div>
  </div>
</div>
